s@model Praticien
@{
    ViewData["Title"] = "DetailPraticien";
}

<div class="container">
    @if (Model == null)
    {
        <div class="row justify-content-md-center align-items-center m-5 p-5">
            <div class="alert alert-danger">
                Aucun praticien avec cet id
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-md-center align-items-center m-5 p-5">
            <h1 class="col">@Model.Nom</h1>
        </div>
        <div class="row justify-content-md-center align-items-center m-5 p-5">
            <span class="col h3">@Model.Specialite €</span>
        </div>

        <div class="row justify-content-md-center align-items-center m-5 p-5">
            @foreach (Image i in Model.Images)
            {
                <div class="col-3 bloc-image">
                    <img src="~/@i.Url" />
                </div>
            }
        </div>
        <div class="row justify-content-md-center align-items-center m-5 p-5">
            <div class="col ">@Model.Telephone</div>
        </div>
        <div class="row justify-content-md-center align-items-center m-5 p-5">
            <div class="col ">@Model.Email</div>
        </div>
        <div class="row justify-content-md-center align-items-center m-5 p-5">
            <div class="col ">@Model.Adresse</div>
        </div>
        <div class="row justify-content-md-center align-items-center m-5 p-5">
            @if (ViewBag.isRdv)
            {
                <a class="col btn btn-danger" asp-controller="Praticien" asp-action="RemoveFromRdv" asp-route-id="@Model.Id">Annuler un Rdv</a>
            }
            else
            {
                <a class="col btn btn-primary" asp-controller="Praticien" asp-action="AddRdv" asp-route-id="@Model.Id">Ajouter un Rdv</a>
            }
        </div>
    }
</div>

